package uno;

import java.util.*;

public class Condicional {

	public static void main(String[] args) {
		
		double edad, numerofav;
		
		Scanner teclado = new Scanner (System.in);
		
		System.out.println("Digame tu nÃºmero favorito: ");
		numerofav = teclado.nextDouble();
		System.out.println("Digame tu edad: ");
		edad = teclado.nextDouble();
		
		if (numerofav/2 = %0) System.out.println("Tu numero es par");
		
		else (numerofav/2 = 0>%0);
		if else (edad<18) System.out.println("Eres menor");
		if else (edad>18) System.out.println("Eres mayor");
		
		
	
		teclado.close();
	}

}
